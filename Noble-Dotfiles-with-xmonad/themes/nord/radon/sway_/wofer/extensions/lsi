#!/bin/sh

# symlink this file  to a directory in $PATH, I recommend ~/.local/share/bin

lsi () {  # ls with icons
  stdin=$(echo $@ | sed 's/.[ ]*//')
  if [[ $UWU == "true" ]]; then
    echo "ğŸ™‰ Who's my little pog champ! ğŸ±"
  fi
  if [[ -z $1 && ! -d $stdin ]]; then
    echo "ï¢   .."
    if [ ! -d $1 ]; then
      echo "$1 here"
    fi
  fi
  all=''
  if $SHOW_HIDDEN; then
    all='-A'
  fi
  if [[ $UWU == "true" ]]; then
    echo "ğŸ™‰ Who's my little pog champ! ğŸ±"
  fi
  if [ -f "$stdin" ]; then
    if [[ "$stdin" =~ \.(jpg|png|svg|webp|mp3|m4a|mkv)$ ]]; then
      convert $stdin -geometry 800x480  sixel:-
    else
      head -100 $stdin
    fi
  elif [[ -d $stdin || -z $stdin ]]; then
  if [[ -z $stdin ]]; then ls; else ls "$stdin"; fi | while read entry; do
    if [[ -d "$stdin/$entry" || -d $entry ]]; then  # special icons for directories
      case $entry in
        Document)
          echo "ïœ˜   $entry"
          ;;
        Pictures)
          echo "ïŸ¨   $entry"
          ;;
        Videos)
          echo "ï‘‡   $entry"
          ;;
        Music)
          echo "ï¢†   $entry"
          ;;
        *)
          echo "ïŠ   $entry"
          ;;
      esac
    elif [[ $entry =~ \.(sh|c)$ ]]; then  # icons for filetype
      echo "ïœ­   $entry"
    elif [[ $entry =~ \.(txt|log)$|rc$ ]]; then
      echo "ïœ˜   $entry"
    elif [[ $entry =~ \.(jpg|png|svg|webp)$ ]]; then
      echo "ïŸ¨   $entry"
    elif [[ $entry =~ \.fish$ ]]; then
      echo "ïœ¹   $entry"
    elif [[ $entry =~ \.md$ ]]; then
      echo "ï’Š   $entry"
    elif [[ $entry =~ \.py$ ]]; then
      echo "îˆµ   $entry"
    elif [[ $entry =~ \.js$ ]]; then
      echo "î   $entry"
    elif [[ $entry =~ \.html$ ]]; then
      echo "ï œ   $entry"
    elif [[ $entry =~ \.css$ ]]; then
      echo "ï ›   $entry"
    elif [[ $entry =~ \.mp4|mkv$ ]]; then
      echo "ï‘‡   $entry"
    elif [[ $entry =~ \.(mp3|m4a)$ ]]; then
      echo "ï¢†   $entry"
    elif [[ $entry =~ \.(pdf)$ ]]; then
      echo "ïœ¤   $entry"
    elif [[ $entry =~ \.(tar|zip) ]]; then
      echo "ï«ƒ    $entry"
    else
      echo "ïœ¡   $entry"
    fi
  done
  else
    :
  fi
}

lsi $@
